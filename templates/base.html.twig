<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Mon site{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>
<body>
    {% if app.user %}
        <button href="{{ path('app_logout') }}">Logout</button>
    {% else %}
        <button href="{{ path('app_login') }}">Logout</button>
        <button href="{{ path('app_register') }}">Register</button>
    {% endif %}

    {% block body %}{% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/script.js') }}"></script>
    {% endblock %}
</body>
</html>
